@model IEnumerable<EduCareProject.Models.Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Announcements</h1>
        <hr />
        <p>
            @if (User.IsInRole("Teacher"))
            {
                <a class="btn btn-danger" asp-controller="Announcement" asp-action="Create">Create New</a>
            }
        </p>

        @if (Model.Count() != 0)
        {
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-header">
                        @Html.DisplayFor(modelItem => item.Title)
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        </blockquote>
                        @if (User.IsInRole("Teacher"))
                        {
                            <a class="text-danger" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </div>
                </div>
                <br />
            }
        }
        else
        {
            <p class="lead">There are no announcements yet</p>
        }
    </div>
</div>
