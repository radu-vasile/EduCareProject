@model EduCareProject.ViewModels.QuestionAssignmentViewModel

@{
    ViewData["Title"] = "CreateQuestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Assignment @Model.question.AssignmentId</h1>
<div class="container mt-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10 col-lg-10">
            <form asp-action="CreateQuestions">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="border">
                    <div class="question bg-white p-3 border-bottom">
                        <div class="d-flex flex-row justify-content-between align-items-center mcq">
                            <h4>Question</h4><span>(@Model.currentQuestionNumber of @Model.totalNumberOfQuestions)</span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="question.AssignmentId" value="@Model.question.AssignmentId" />
                    <input type="hidden" asp-for="totalNumberOfQuestions" value="@Model.totalNumberOfQuestions" />
                    <input type="hidden" asp-for="currentQuestionNumber" value="@Model.currentQuestionNumber" />
                    <div class="question bg-white p-3 border-bottom">
                        <div class="d-flex flex-row align-items-center question-title">
                            <h3 class="text-danger">Q.</h3>
                            <h5 class="mt-1 ml-2">Add your question below:</h5>
                        </div>
                        <div class="container">
                            <textarea class="form-control" asp-for="question.Content" id="content" placeholder="Content..."></textarea>
                            <span asp-validation-for="question.Content" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="container">
                            <div class="ans ml-2">
                                @*<input class="form-check-input" type="radio" value="1" name="CorrectAnswer" asp-for="question.CorrectAnswer" id="flexRadioDefault1">*@
                                @Html.RadioButtonFor(m => m.question.CorrectAnswer, "1", new { @class = "form-check-input", @checked = "checked" })
                                <input type="text" asp-for="question.FirstAnswer" class="form-control" id="Answer1" placeholder="First answer">
                                <span asp-validation-for="question.FirstAnswer" class="text-danger"></span>
                            </div>
                            <div class="ans ml-2">
                                @*<input class="form-check-input" type="radio" value="2" name="CorrectAnswer" asp-for="question.CorrectAnswer" id="flexRadioDefault2">*@
                                @Html.RadioButtonFor(m => m.question.CorrectAnswer, "2", new { @class = "form-check-input" })
                                <input type="text" asp-for="question.SecondAnswer" class="form-control" id="Answer2" placeholder="Second answer">
                                <span asp-validation-for="question.SecondAnswer" class="text-danger"></span>
                            </div>
                            <div class="ans ml-2">
                                @*<input class="form-check-input" type="radio" value="3" name="CorrectAnswer" asp-for="question.CorrectAnswer" id="flexRadioDefault3">*@
                                @Html.RadioButtonFor(m => m.question.CorrectAnswer, "3", new { @class = "form-check-input" })
                                <input type="text" asp-for="question.ThirdAnswer" class="form-control" id="Answer3" placeholder="Third answer">
                                <span asp-validation-for="question.ThirdAnswer" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-row justify-content-end p-3 bg-white">
                        <button class="btn btn-primary border-success align-items-center btn-success" type="submit">Next <i class="fa fa-angle-right ml-2"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
